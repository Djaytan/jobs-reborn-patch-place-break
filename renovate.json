{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "helpers:pinGitHubActionDigests"
  ],
  "labels": [
    "t:dependencies"
  ],
  "prHourlyLimit": 10,
  "schedule": [
    "before 6am on the first day of the month"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "maven"
      ],
      "groupName": "Maven plugins"
    }
  ]
}
